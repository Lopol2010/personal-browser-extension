{
	"manifest_version" : 2,
	"name" : "MY_EXTENSION",
	"short_name" : "openload_video",
	"version" : "1.0",
	"author" : "...",
	"description" : "Convert openload iframe into direct video stream; torjackan justifier;",
	"content_scripts": [
		{
			"all_frames": true,
			"matches": ["*://*/*"],
			"js": ["js/utils.js", "js/openload.js"],
			"run_at": "document_end"
		},
		{
			"matches": ["*://torjackan.info/*"],
			"js": ["js/utils.js", "js/torjackan.js"],
			"run_at": "document_end"
		}
	],
	"icons" : {
		"32" : "icons/32x32.png",
		"48" : "icons/48x48.png"
	},
	
	"background" : {
		"scripts" : ["hot-reload.js","background.js"],
		"persistent" : false
	},
	"permissions": [
		"storage",
		"tabs"
	],
    "browser_action": {
        "default_title": "...",
        "default_icon": "icons/48x48.png",
		"default_popup": "popup.html"
    }
}


